namespace :install do
  task :nginx do
    on roles(:app) do |host|
      execute <<-COMMAND
        cd #{current_path}/install/nginx-1.4.4
        chmod 700 configure
	./configure --prefix=#{deploy_to} --without-http_rewrite_module
	make
	make install
      COMMAND
    end  
  end

  task :go do
    on roles(:app) do |host|
      execute <<-COMMAND
        cd #{current_path}/install
        tar -C #{deploy_to} -xzf go1.2.linux-amd64.tar.gz
      COMMAND
    end
  end
end
